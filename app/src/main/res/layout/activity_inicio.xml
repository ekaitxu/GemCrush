<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/caverna_cristal">


    <Button
        android:id="@+id/btnAgradecimientos"
        android:layout_width="209dp"
        android:layout_height="53dp"

        android:layout_marginBottom="216dp"
        android:backgroundTint="#FF9800"
        android:text="@string/agradecimientos"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnIdiomas"
        android:layout_width="209dp"
        android:layout_height="53dp"
        android:layout_marginStart="185dp"
        android:layout_marginEnd="133dp"
        android:layout_marginBottom="304dp"
        android:backgroundTint="#FF9800"
        android:text="@string/ajustes"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.747"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnJuego"
        android:layout_width="209dp"
        android:layout_height="53dp"
        android:layout_marginStart="185dp"
        android:layout_marginEnd="133dp"
        android:layout_marginBottom="392dp"
        android:backgroundTint="#FF9800"
        android:text="@string/Juego"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.747"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imgVida"
        android:layout_width="57dp"
        android:layout_height="68dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.045"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.024"
        app:srcCompat="@drawable/vida" />

    <TextView
        android:id="@+id/tvVida"
        android:layout_width="27dp"
        android:layout_height="50dp"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="35sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.091"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.039" />

    <TextView
        android:id="@+id/tvTiempo"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.043"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.108" />
</androidx.constraintlayout.widget.ConstraintLayout>